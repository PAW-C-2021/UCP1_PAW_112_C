@model IEnumerable<UCP1_PAW_112_C.Models.Barang>

@{
    ViewData["Title"] = "Barang";
}

<h1>Barang</h1>

<p>
    <a asp-action="Create">Tambah</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Stok Barang")
            </th>
            <th>
                @Html.DisplayName("Banyak Barang")
            </th>
            <th>
                @Html.DisplayName("Jenis Barang")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StokBarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BanyakBarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisBarang)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KodeBarang"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.KodeBarang"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.KodeBarang"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
